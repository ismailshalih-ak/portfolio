---
import '../styles/global.css';
import Linkedin from '@lucide/astro/icons/linkedin';
import Mail from '@lucide/astro/icons/mail';
import ChevronDown from '@lucide/astro/icons/chevron-down';
import ExperienceCard from '../components/ExperienceCard';
import SkillBento from '../components/SkillBento';
---

<html lang="en" class="bg-[#020122]">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Ismail Shalih Abdul Kholiq - Portfolio</title>
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Space+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
		<style>
			.hero-hollow {
				-webkit-text-stroke: 3px #020122;
				-webkit-text-fill-color: transparent;
				color: transparent;
			}
			.feature-block {
				border: 3px solid #020122;
				padding: 1.5rem;
				background: #ffffff;
			}

		</style>
	</head>
	<body class="bg-[#020122] font-['Space_Mono'] min-h-screen flex flex-col">
		
		<!-- HERO SECTION -->
		<section class="relative min-h-screen flex flex-col items-center justify-center px-6 md:px-16 py-16 md:py-24">
			<!-- Top Left: ISMAIL.DEV -->
			<div class="absolute top-8 left-8 text-[24px] font-bold leading-none font-['Space_Grotesk']">ISMAILSHALIH.DEV</div>

			<div class="max-w-6xl mx-auto text-center">
				<h1 class="font-['Space_Grotesk'] font-bold text-6xl md:text-[10rem] lg:text-[12rem] text-right">
					<span class="hero-hollow tracking-tighter">FULL STACK</span>
					<br>
					<span class="tracking-tighter -mt-12 md:-mt-18 lg:-mt-24 block">ENGINEER.</span>
				</h1>
				
				<p class="max-w-2xl mx-auto mb-12 text-center font-['Space_Grotesk'] leading-relaxed text-[#020122]">
					Jakarta-based engineer with 4+ years of experience shipping code.
				</p>
				
				<!-- <form class="flex gap-3 max-w-md mx-auto">
					<input
						type="text"
						placeholder="what is your idea?"
						class="flex-1 px-4 py-3 border-[3px] border-[#020122] bg-white text-[#020122] font-['Space_Mono'] placeholder:text-gray-500 focus:outline-none focus:border-[#FF5722]"
					/>
					<button
						type="submit"
						class="px-6 py-3 bg-[#FF5722] border-[3px] border-[#020122] text-[#020122] font-semibold hover:opacity-90 transition-opacity font-['Space_Mono']"
					>
						LET'S GO
					</button>
				</form> -->

				<div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
					<ChevronDown class="w-8 h-8 text-[#020122]" />
				</div>
			</div>
		</section>
		
		<!-- EXPERIENCE SECTION -->
		<section id="experience" class="max-w-4xl mx-auto px-6 md:px-16 py-16 md:py-24">
			<h2 class="font-['Space_Grotesk'] font-bold text-2xl md:text-3xl border-b-[3px] border-[#020122] pb-4 mb-12">VERSION HISTORY</h2>

			<div class="space-y-8">
				<ExperienceCard
					client:load
					date="Aug 2025 - Nov 2025   (contract)"
					role="Full Stack Developer"
					company="Accord Innovations"
					companyDesc="IT Consultant, Jakarta (Hybrid)"
					techStack={['Next.js', 'Express.js', 'Redis', 'RabbitMQ', 'PostgreSQL', 'Docker']}
					description="Delivered frontend and backend enhancements for a client's cybersecurity finding management system using Next.js and Express.js. Implemented multiple change requests, improved UX, and reduced manual steps in key workflows. Completed development in half the allocated time."
					timelineColor="#FF5722"
				/>

				<ExperienceCard
					client:load
					date="Apr 2022 - Aug 2024"
					role="Full Stack Engineer"
					company="Segari"
					companyDesc="e-Groceries Startup, Jakarta (Remote)"
					techStack={['Java Spring Boot', 'React.js', 'Flutter', 'PostgreSQL', 'Redis']}
					description="As a Full Stack Engineer on the PCGM (Pricing, Cost, Growth, and Mitra) team, I played a pivotal role in developing and deploying key features for the Segari web and mobile applications, as well as related internal tools. My contributions included:"
					items={[
						'<strong>Discovery Page:</strong> Built Discovery Page, a CMS for showcasing images, videos, custom product grids and many more. Enabling the marketing team to create dedicated pages for promotions and flash sale campaigns. Some other pages that I developed are <strong>Voucher Selection Page</strong> and <strong>Payment Settings Page</strong>.',
						'<strong>Third-Party Service Caching:</strong> Implemented caching for the price personalization service, reducing third-party API calls by ~50%. This optimization lowered infrastructure costs, improved response times, and minimized dependency on external service availability.',
						'<strong>Analytics Integration:</strong> Integrated analytics tools to track user behavior across web and mobile platforms, enabling data-driven decision making for product and marketing teams. Designed event schemas, implemented tracking via platforms like Google Analytics and Mixpanel, and collaborated with stakeholders to ensure relevant user actions were captured and reported accurately.',
						'Other notable projects include <strong>Deeplink Handler, Image Compression, Page Load Improvements, Price Group Batch Upload</strong>, and various bug fixes.'
					]}
					timelineColor="#4F46E5"
				/>

				<ExperienceCard
					client:load
					date="Jun 2021 - Mar 2022"
					role="Software Engineer"
					company="Solecode"
					companyDesc="IT Consulting Firm, Jakarta (Remote)"
					techStack={['Java', 'Javascript', 'Wavemaker']}
					projectName="Project: Internal Pre-Procurement Dashboard for a Major Energy Company"
					description="Delivering a web platform dedicated to pre-procurement operations, supporting procurement teams across multiple subholding upstreams. Key Features Delivered:"
					items={[
						'<strong>Procurement List Module:</strong> Enabled procurement teams to create, monitor, and manage request lists for materials and services.',
						'<strong>TKDN Achievement Reports:</strong> Implemented functionality to track and display compliance with local content regulations.',
						'<strong>Vendor Performance Evaluation:</strong> Developed criteria-based dashboards and scorecards for contract-based vendor assessments.',
						'<strong>Service Performance Review:</strong> Supported post-contract evaluation of service delivery quality.'
					]}
					timelineColor="#020122"
				/>
			</div>
		</section>
		
		<section class="max-w-4xl mx-auto px-6 md:px-16 py-16 md:py-24">
			<h2 class="font-['Space_Grotesk'] font-bold text-2xl md:text-3xl border-b-[3px] border-[#020122] pb-4 mb-12">THE TOOLBOX</h2>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
				<SkillBento
					client:load
					title="FRONTEND"
					content="React.js<br/>Next.js<br/>Typescript"
					isLarge={true}
					span={2}
				/>

				<SkillBento
					client:load
					title="BACKEND"
					content="Java Spring Boot<br/>Node.js<br/>Express<br/>Redis<br/>PostgreSQL"
				/>

				<SkillBento
					client:load
					title="INFRASTRUCTURE"
					content="AWS<br/>Vercel<br/>Docker"
				/>

				<SkillBento
					client:load
					title="MOBILE"
					content="Flutter<br/>React Native"
				/>

				<div class="hidden md:block"></div>

				<div class="hidden md:block"></div>

				<SkillBento
					client:load
					title="TOOLS"
					content="<div class='grid grid-cols-2 gap-2 text-lg md:text-xl font-bold'><div>Jenkins</div><div>Git</div><div>Android Studio</div><div>IntelliJ</div><div>VSCode</div><div>DBeaver</div><div>Postman</div></div>"
					isLarge={true}
					span={2}
				/>
			</div>
		</section>
		
		<!-- FOOTER -->
		<footer class="bg-[#020122] text-white py-16">
			<div class="max-w-4xl mx-auto px-6 md:px-16">
				<div class="flex flex-col items-center gap-6">
					<p class="font-['Space_Grotesk'] font-bold text-2xl md:text-3xl mb-8">READY TO BUILD?</p>
					
					<div class="flex gap-8 mb-8">
						<a href="mailto:ismailshalih@gmail.com" class="hover:opacity-80 transition-opacity">
							<Mail class="w-8 h-8" />
						</a>
						<a href="https://www.linkedin.com/in/ismailshalih-ak/" target="_blank" class="hover:opacity-80 transition-opacity">
							<Linkedin class="w-8 h-8" />
						</a>
					</div>
					
					<hr class="border-white/20 w-full mb-8" />
					
					<p class="text-xs text-white/50">&copy; 2026 Ismail Shalih Abdul Kholiq. Built with zero bloat.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
